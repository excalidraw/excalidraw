@@ -312,4 +312,60 @@ $verticalBreakpoint: 861px;
       border-radius: 4px;
     }
   }
+
+  .ttd-dialog-input-container {
+    position: relative;
+    width: 100%;
+    height: 100%;
+  }
+
+  .ttd-dialog-voice-button {
+    position: absolute;
+    right: 0.5rem;
+    bottom: 0.5rem;
+    width: 2rem;
+    height: 2rem;
+    padding: 0;
+    border-radius: 50%;
+    background: var(--color-primary);
+    color: var(--island-bg-color);
+    border: none;
+    cursor: pointer;
+    display: flex;
+    align-items: center;
+    justify-content: center;
+    transition: background 0.2s, transform 0.2s;
+
+    &:hover:not(:disabled) {
+      background: var(--color-primary-darker);
+      transform: scale(1.05);
+    }
+
+    &:disabled {
+      opacity: 0.5;
+      cursor: not-allowed;
+    }
+
+    &.recording {
+      background: var(--color-danger);
+      animation: voice-pulse 1s ease-in-out infinite;
+    }
+
+    svg {
+      width: 1rem;
+      height: 1rem;
+    }
+  }
+
+  @keyframes voice-pulse {
+    0%,
+    100% {
+      transform: scale(1);
+      opacity: 1;
+    }
+    50% {
+      transform: scale(1.1);
+      opacity: 0.7;
+    }
+  }
