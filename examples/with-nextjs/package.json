  },
  "dependencies": {
    "next": "14.1",
    "react": "19.0.0",
    "react-dom": "19.0.0"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "19.0.10",
    "@types/react-dom": "19.0.4",
    "path2d-polyfill": "2.0.1",
    "typescript": "^5"
  }
}
